---
import AircraftCard from "./AircraftCard.astro";

const { content } = Astro.props;
---

<section class="bg-gray-900 py-16 lg:py-24">
  <div class="mx-auto max-w-9xl px-6 lg:px-8">
    <div class="">
      {
        content.upperHeading && (
          <h2 class="mx-auto mt-12 uppercase text-lg lg:text-xl lg:max-w-3xl font-sans1 text-center font-bold tracking-tight text-accent">
            {content.upperHeading}
          </h2>
        )
      }
      {
        content.heading && (
          <h2 class="mx-auto mb-12 text-3xl lg:text-4xl lg:max-w-3xl font-sans1 text-center font-bold tracking-tight text-gray-50">
            {content.heading}
          </h2>
        )
      }
    </div>
    <div class="mx-auto max-w-6xl">
      <ul
        role="list"
        class="grid grid-cols-1 gap-6 md:grid-cols-2 lg:grid-cols-3"
      >
        {
          content.cards.map((program) => (
            <AircraftCard
              title={program.title}
              imagePath={program.imagePath}
              imageAlt={program.imageAlt}
              link={program.link}
              linkText={program.linkText}
              description={program.description}
            />
          ))
        }
      </ul>
    </div>
  </div>
</section>
