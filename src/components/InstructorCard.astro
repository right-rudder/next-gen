---
const { name, qualifications, imagePath, bio } = Astro.props;
import type { ImageMetadata } from "astro";
import { Image } from "astro:assets";
const images = import.meta.glob<{ default: ImageMetadata }>(
  "/src/assets/*.{jpeg,jpg,png,gif}"
);
if (!images[imagePath])
  throw new Error(
    `"${imagePath}" does not exist in glob: "src/assets/*.{jpeg,jpg,png,gif}"`
  );
---

<li class="group">
  <div class="mx-auto rounded-full overflow-hidden h-56 w-56">
    <Image
      src={images[imagePath]()}
      alt={name}
      class="w-full h-full object-cover object-top group-hover:scale-105 group-hover:brightness-105 duration-500 ease-in-out"
      quality={80}
    />
  </div>
  <h3
    class="mt-6 text-base font-semibold leading-7 tracking-tight text-gray-900"
  >
    {name}
  </h3>
  <p class="text-sm leading-6 text-gray-600">CFI</p>
</li>
