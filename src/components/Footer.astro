---
const today = new Date();
import { FaPhoneSquareAlt } from "react-icons/fa";
import { IoLocationSharp } from "react-icons/io5";
import { MdEmail } from "react-icons/md";
import {
  EMAIL_ADDRESS,
  PHONE_NUMBER,
  ADDRESS_LINE_1,
  ADDRESS_LINE_2,
  FACEBOOK_URL,
  INSTAGRAM_URL,
  LINKEDIN_URL,
  TIKTOK_URL,
  AIRPORT,
  SITE_DESCRIPTION,
  LOCATIONS,
} from "../consts";
import { navbarLinks } from "../data/navbarLinks";
import logo from "../assets/next-gen-logo.png";
import { Image } from "astro:assets";

const { pathname } = Astro.url;
---

<footer class="relative bg-gradient-to-b from-primary to-primary-dark">
  <div
    class="px-4 pt-12 mx-auto sm:max-w-xl md:max-w-full lg:max-w-screen-xl md:px-24 lg:px-8"
  >
    <div class="grid gap-16 row-gap-10 mb-8 lg:grid-cols-6">
      <div class="md:max-w-md lg:col-span-2">
        <a
          href="/"
          aria-label="Go home"
          title="Company"
          class="flex justify-center lg:justify-start items-center w-full"
        >
          <Image
            src={logo}
            alt="NextGen Flight Academy Logo"
            class="h-24 w-auto"
          />
        </a>
        <div class="mt-4 lg:max-w-sm">
          <p class="text-sm text-white text-justify">
            {SITE_DESCRIPTION}
          </p>
        </div>
      </div>
      <div
        class="grid grid-cols-2 gap-5 row-gap-8 lg:col-span-4 md:grid-cols-4"
      >
        <div>
          <p class="font-semibold tracking-wide text-gray-900">Quick Links</p>
          <ul class="mt-2 space-y-2">
            <li>
              <a
                href="/"
                class="transition-colors duration-300 text-white hover:text-primary-dark"
                >Home</a
              >
            </li>
            <li>
              <a
                href="/new-to-flying"
                class="transition-colors duration-300 text-white hover:text-primary-dark"
                >New to Flying?</a
              >
            </li>
            <li>
              <a
                href="/training-programs"
                class="transition-colors duration-300 text-white hover:text-primary-dark"
                >Training Programs
              </a>
            </li>
            <li>
              <a
                href="/privacy-policy"
                class="transition-colors duration-300 text-white hover:text-primary-dark"
                >Privacy Policy
              </a>
            </li>
            <li>
              <a
                href="/contact"
                class="transition-colors duration-300 text-white hover:text-primary-dark"
                >Contact Us</a
              >
            </li>
          </ul>
        </div>
        <div>
          <p class="font-semibold tracking-wide text-gray-900">Fly Today</p>
          <ul class="mt-2 space-y-2">
            <li>
              <a
                href="/enrollment"
                class="transition-colors duration-300 text-white hover:text-primary-dark"
                >Enrollment Interest
              </a>
            </li>
            <li>
              <a
                href="/quiz-form"
                class="transition-colors duration-300 text-white hover:text-primary-dark"
                >Take Our Quiz
              </a>
            </li>
            <li>
              <a
                href="/intro-flight"
                class="transition-colors duration-300 text-white hover:text-primary-dark"
                >Intro Flights
              </a>
            </li>
            <li>
              <a
                href="https://app.process.st/workflows/NextGen-Aircraft-Checkout-qNoL_5yUWfBKy5Jd9PBNaw/run-link"
                target="_blank"
                class="transition-colors duration-300 text-white hover:text-primary-dark"
                >Rent Today</a
              >
            </li>
          </ul>
        </div>
        {
          LOCATIONS.map((location) => (
            <div>
              <p class="font-semibold tracking-wide text-gray-900">
                {location.title}
              </p>
              <a
                href={location.gMaps}
                target="_blank"
                class="transition-colors duration-300 text-white hover:text-primary-dark"
              >
                <>
                  <span>{location.address}</span>
                  <br />
                  <span>
                    {location.city}, {location.state} {location.zip}
                  </span>
                </>
              </a>
              <a
                href={`tel:${location.phone}`}
                class="transition-colors duration-300 text-white hover:text-primary-dark flex items-center align-middle mt-2"
              >
                <FaPhoneSquareAlt className="mr-2 text-lg" />
                {location.phone}
              </a>
            </div>
          ))
        }
      </div>
    </div>
    <div
      class="flex flex-col justify-between pt-5 pb-10 border-t border-deep-purple-accent-200 sm:flex-row"
    >
      <p class="text-sm text-gray-100">
