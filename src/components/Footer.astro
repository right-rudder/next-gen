---
const today = new Date();
import { FaPhoneSquareAlt } from "react-icons/fa";
import { IoLocationSharp } from "react-icons/io5";
import { MdEmail } from "react-icons/md";
import {
  EMAIL_ADDRESS,
  PHONE_NUMBER,
  ADDRESS_LINE_1,
  ADDRESS_LINE_2,
  FACEBOOK_URL,
  INSTAGRAM_URL,
  LINKEDIN_URL,
  TIKTOK_URL,
  AIRPORT,
  SITE_DESCRIPTION,
  LOCATIONS,
} from "../consts";
import { navbarLinks } from "../data/navbarLinks";
import logo from "../assets/NG Logo White Background 2.png";
import { Image } from "astro:assets";
import ImageComp from "./ImageComp.astro";

const { pathname } = Astro.url;
---

<footer class="relative bg-gradient-to-b from-primary to-primary-dark">
  <div
    class="px-4 pt-24 pb-16 lg:pb-2 md:pt-12 mx-auto sm:max-w-xl md:max-w-full lg:max-w-screen-xl md:px-24 lg:px-8"
  >
    <div class="grid gap-16 row-gap-10 mb-8 lg:grid-cols-6">
      <div class="lg:col-span-2">
        <a
          href="/"
          aria-label="Go home"
          title="Company"
          class="flex justify-center items-center w-full"
        >
          <Image
            src={logo}
            alt="NextGen Flight Academy Logo"
            class="object-contain h-36 w-auto invert"
          />
        </a>
        <div class="mt-4 lg:max-w-sm">
          <p class="text-sm text-white text-justify">
            {SITE_DESCRIPTION}
          </p>
          <a
            href="/privacy-policy"
            class="mt-3 transition-colors duration-300 text-sm text-white hover:text-accent"
            >Privacy Policy
          </a>
        </div>
      </div>
      <div class="grid grid-cols-2 gap-9 lg:col-span-4 lg:grid-cols-4">
        <div>
          <p class="font-semibold tracking-wide text-gray-50/90">Quick Links</p>
          <ul class="mt-2 space-y-2">
            <li>
              <a
                href="/new-to-flying"
                class="transition-colors duration-300 text-white hover:text-accent"
                >New to Flying?</a
              >
            </li>
            <li>
              <a
                href="/intro-flight"
                class="transition-colors duration-300 text-white hover:text-accent"
                >Book a Flight</a
              >
            </li>
            <li>
              <a
                href="https://forms.nextgen-flightacademy.com/new-client-intake"
                target="_blank"
                class="transition-colors duration-300 text-white hover:text-accent"
                >Submit Enrollment Docs
              </a>
            </li>
            <li>
              <a
                href="/our-fleet"
                class="transition-colors duration-300 text-white hover:text-accent"
                >Rent Today
              </a>
            </li>
            <li>
              <a
                href="/contact"
                class="transition-colors duration-300 text-white hover:text-accent"
                >Contact Us</a
              >
            </li>
          </ul>
        </div>
        <div class="text-right lg:text-left">
          <p class="font-semibold tracking-wide text-gray-50/90">
            Training Programs
          </p>
          <ul class="mt-2 space-y-2">
            <li>
              <a
                href="/training-programs/career"
                class="transition-colors duration-300 text-white hover:text-accent"
                >Career Track
              </a>
            </li>
            <li>
              <a
                href="/training-programs/private-pilot"
                class="transition-colors duration-300 text-white hover:text-accent"
                >Private Pilot
              </a>
            </li>
            <li>
              <a
                href="/training-programs/instrument-rating"
                class="transition-colors duration-300 text-white hover:text-accent"
                >Instrument Rating
              </a>
            </li>
            <li>
              <a
                href="/training-programs/commercial-pilot"
                class="transition-colors duration-300 text-white hover:text-accent"
                >Commercial Pilot</a
              >
            </li>
            <li>
              <a
                href="/training-programs/multi-engine-rating"
                class="transition-colors duration-300 text-white hover:text-accent"
                >Multi-Engine Rating</a
              >
            </li>
            <li>
              <a
                href="/training-programs/certified-flight-instructor"
                class="transition-colors duration-300 text-white hover:text-accent"
                >Flight Instructor</a
              >
            </li>
            <li>
              <a
                href="/training-programs/airline-transport-pilot"
                class="transition-colors duration-300 text-white hover:text-accent"
                >Airline Transport Pilot</a
              >
            </li>
          </ul>
        </div>
        <div>
          <p class="font-semibold tracking-wide text-gray-50/90">About</p>
          <ul class="mt-2 space-y-2">
            <li>
              <a
                href="/our-fleet"
                class="transition-colors duration-300 text-white hover:text-accent"
                >Our Fleet</a
              >
            </li>
            <li>
              <a
                href="/about/pilot-resource-center"
                class="transition-colors duration-300 text-white hover:text-accent"
                >Pilot Resources</a
              >
            </li>
            <li>
              <a
                href="/about/financing"
                class="transition-colors duration-300 text-white hover:text-accent"
                >Financing</a
              >
            </li>
            <li>
              <a
                href="/about/partnerships"
                class="transition-colors duration-300 text-white hover:text-accent"
                >Partnerships</a
              >
            </li>
            <li>
              <a
                href="/blog"
                class="transition-colors duration-300 text-white hover:text-accent"
                >Blog</a
              >
            </li>
          </ul>
        </div>
        <div class="grid grid-cols-1 gap-y-4">
          {
            LOCATIONS.map((location, index) => (
              <div class="text-right lg:text-left bg-white/20 rounded p-3">
                <p class="font-semibold tracking-wide text-gray-50/90">
                  {location.title}
                </p>
                <a
                  href={location.gMaps}
                  target="_blank"
                  class="mt-2 space-y-2 transition-colors duration-300 text-white hover:text-accent"
                >
                  <>
                    <span class="text-sm">{location.address}</span>
                    <br />
                    <span class="text-sm">
                      {location.city}, {location.state} {location.zip}
                    </span>
                  </>
                </a>
                <a
                  href={`tel:${location.phone}`}
                  class="text-right justify-end lg:justify-start lg:text-left transition-colors duration-300 text-white hover:text-accent flex items-center align-middle mt-1"
                >
                  <FaPhoneSquareAlt className="mr-2 text-lg" />
                  {location.phone}
                </a>
              </div>
            ))
          }
        </div>
      </div>
    </div>
  </div>
  <div class="pt-5 pb-10 border-t border-accent">
    <div
      class="mx-auto flex flex-col gap-2 lg:flex-row justify-between items-center align-middle max-w-6xl"
    >
      <p class="text-sm text-gray-100 text-center">
        Â© Copyright 2024 NextGen Flight Academy. All rights reserved.
      </p>
      <span class="text-white text-center flex gap-2">
        Powered by
        <a
          href="https://rightruddermarketing.com/"
          target="_blank"
          class="text-bold group hover:underline hover:text-white/70 flex gap-2 duration-200"
        >
          <ImageComp
            imagePath="/src/assets/RRM-R-symbol-474.webp"
            imageAlt="Right Rudder Marketing Logo"
            styles="h-6 w-auto group-hover:scale-105 group-hover:brightness-125 drop-shadow-md duration-300"
          />
          More Right Rudder</a
        >
      </span>
      <div
        class="flex items-center justify-center align-middle mt-4 space-x-4 sm:mt-0"
      >
        <a
          href={LINKEDIN_URL}
          target="_blank"
          class="transition-colors duration-300 text-white hover:text-white/70 hover:scale-105"
        >
          <svg viewBox="0 0 16 16" fill="currentColor" class="h-8 lg:h-5">
            <path
              d="M0 1.146C0 .513.526 0 1.175 0h13.65C15.474 0 16 .513 16 1.146v13.708c0 .633-.526 1.146-1.175 1.146H1.175C.526 16 0 15.487 0 14.854zm4.943 12.248V6.169H2.542v7.225zm-1.2-8.212c.837 0 1.358-.554 1.358-1.248-.015-.709-.52-1.248-1.342-1.248S2.4 3.226 2.4 3.934c0 .694.521 1.248 1.327 1.248zm4.908 8.212V9.359c0-.216.016-.432.08-.586.173-.431.568-.878 1.232-.878.869 0 1.216.662 1.216 1.634v3.865h2.401V9.25c0-2.22-1.184-3.252-2.764-3.252-1.274 0-1.845.7-2.165 1.193v.025h-.016l.016-.025V6.169h-2.4c.03.678 0 7.225 0 7.225z"
            ></path>
          </svg>
        </a>
        <a
          href={INSTAGRAM_URL}
          target="_blank"
          class="transition-colors duration-300 text-white hover:text-white/70 hover:scale-105"
        >
          <svg viewBox="0 0 30 30" fill="currentColor" class="h-10 lg:h-6">
            <circle cx="15" cy="15" r="4"></circle>
            <path
              d="M19.999,3h-10C6.14,3,3,6.141,3,10.001v10C3,23.86,6.141,27,10.001,27h10C23.86,27,27,23.859,27,19.999v-10   C27,6.14,23.859,3,19.999,3z M15,21c-3.309,0-6-2.691-6-6s2.691-6,6-6s6,2.691,6,6S18.309,21,15,21z M22,9c-0.552,0-1-0.448-1-1   c0-0.552,0.448-1,1-1s1,0.448,1,1C23,8.552,22.552,9,22,9z"
            ></path>
          </svg>
        </a>
        <a
          href={FACEBOOK_URL}
          target="_blank"
          class="transition-colors duration-300 text-white hover:text-white/70 hover:scale-105"
        >
          <svg viewBox="0 0 24 24" fill="currentColor" class="h-8 lg:h-5">
            <path
              d="M22,0H2C0.895,0,0,0.895,0,2v20c0,1.105,0.895,2,2,2h11v-9h-3v-4h3V8.413c0-3.1,1.893-4.788,4.659-4.788 c1.325,0,2.463,0.099,2.795,0.143v3.24l-1.918,0.001c-1.504,0-1.795,0.715-1.795,1.763V11h4.44l-1,4h-3.44v9H22c1.105,0,2-0.895,2-2 V2C24,0.895,23.105,0,22,0z"
            ></path>
          </svg>
        </a>
      </div>
    </div>
  </div>
</footer>
