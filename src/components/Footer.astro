---
const today = new Date();
import { FaPhone } from "react-icons/fa";
import { IoLocationSharp } from "react-icons/io5";
import { MdEmail } from "react-icons/md";
import {
  EMAIL_ADDRESS,
  PHONE_NUMBER,
  ADDRESS_LINE_1,
  ADDRESS_LINE_2,
  FACEBOOK_URL,
  INSTAGRAM_URL,
  LINKEDIN_URL,
  TIKTOK_URL,
  AIRPORT,
  SITE_DESCRIPTION,
  LOCATIONS,
} from "../consts";
import { navbarLinks } from "../data/navbarLinks";
import logo from "../assets/next-gen-logo.png";
import { Image } from "astro:assets";

const { pathname } = Astro.url;
---

<footer class="pt-12 bg-gradient-to-t from-primary-dark to-primary">
  <div class="">
    <div
      class="lg:max-w-xl mx-auto flex flex-wrap items-center justify-center lg:justify-around px-4 lg:px-6 py-4 lg:py-8 bg-gray-100/90"
    >
      {
        LOCATIONS &&
          LOCATIONS.map(({ city, address, phone }) => (
            <>
              <div class="py-3 text-sm text-primary text-center font-sans1 mr-4">
                <p class="mb-1 text-lg text-primary-dark font-sans">
                  <strong>{city}</strong>
                </p>
                <p class="mb-1">{address}</p>
                <a
                  href={`tel:${phone}`}
                  class="text-primary-dark hover:underline flex justify-center items-center"
                >
                  <FaPhone className="mr-2" />
                  {phone}
                </a>
              </div>
            </>
          ))
      }
      <span
        class="w-full mt-6 text-center font-normal font-sans1 text-primary dark:text-gray-400"
        >For general inquiries, please <a
          href="/contact"
          class="text-primary-dark hover:underline">Contact Us.</a
        ></span
      >
    </div>
  </div>
  <div class="mt-6 mx-auto max-w-7xl overflow-hidden px-6 py-4 lg:px-8">
    <nav class="flex justify-center gap-6" aria-label="Footer">
      <div class="pb-6">
        <a href="/" class="text-sm leading-6 text-white hover:text-gray-200"
          >Home</a
        >
      </div>
      <div class="pb-6">
        <a
          href="/new-to-flying"
          class="text-sm leading-6 text-white hover:text-gray-200"
          >New to Flying?</a
        >
      </div>
      <div class="pb-6">
        <a
          href="/training-programs"
          class="text-sm leading-6 text-white hover:text-gray-200"
          >Training Programs</a
        >
      </div>
      <div class="pb-6">
        <a
          href="/contact"
          class="text-sm leading-6 text-white hover:text-gray-200">Contact Us</a
        >
      </div>
    </nav>
  </div>
  <div class="mx-auto max-w-7xl overflow-hidden py-4 lg:px-8">
    <nav class="flex justify-center gap-6" aria-label="Footer">
      <div class="pb-6">
        <a href="/" class="text-sm leading-6 text-white hover:text-gray-200"
          >Enrollment Interest</a
        >
      </div>
      <div class="pb-6">
        <a
          href="/new-to-flying"
          class="text-sm leading-6 text-white hover:text-gray-200"
          >Take Our Quiz</a
        >
      </div>
      <div class="pb-6">
        <a
          href="/training-programs"
          class="text-sm leading-6 text-white hover:text-gray-200"
          >Intro Flights</a
        >
      </div>
      <div class="pb-6">
        <a
          href="https://app.process.st/workflows/NextGen-Aircraft-Checkout-qNoL_5yUWfBKy5Jd9PBNaw/run-link"
          target="_blank"
          class="text-sm leading-6 text-white hover:text-gray-200"
          >Rent Today
        </a>
      </div>
    </nav>
  </div>
  <div class="mx-auto mt-12 max-w-7xl grid grid-cols-12 gap-2 gap-y-8 sm:gap-4">
    <div class="col-span-12">
      <div class="mb-2">
        <a
          class="flex justify-center align-middle items-center font-bold text-2xl"
          href="/"
        >
          <Image
            src={logo}
            alt="NextGen Flight Academy Logo"
            class="w-32 h-full object-contain filter drop-shadow-md"
            width={450}
            height={188}
          /></a
        >
      </div>
      <div class="mt-4 flex-3 text-sm text-gray-50">
        <p class="text-justify text-sm leading-5">
          {SITE_DESCRIPTION}
        </p>
        <a
          class="hover:text-gray-300 hover:underline transition duration-150 ease-in-out mr-2 rtl:mr-0 rtl:ml-2"
          href="/privacy-policy"
          set:text="Privacy Policy"
        />
      </div>
    </div>
  </div>
  <div class="mx-auto max-w-7xl overflow-hidden pb-12 lg:px-8">
    <div class="mt-10 flex justify-center space-x-10">
      <a
        href={FACEBOOK_URL}
        target="_blank"
        class="text-gray-200 hover:text-gray-300"
      >
        <span class="sr-only">Facebook</span>
        <svg
          class="h-6 w-6"
