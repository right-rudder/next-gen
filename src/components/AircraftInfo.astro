---
import { FaDownload } from "react-icons/fa";

const { data } = Astro.props;
---

<section class="mx-auto max-w-6xl w-full py-24 z-0">
  <div class="grid grid-cols-1 lg:grid-cols-4 space-x-9">
    <div class="col-span-2 px-4 lg:px-12">
      <h1 class="text-primary text-6xl font-bold">{data.title}</h1>
      <p class="mt-6 leading-relaxed text-lg font-sans1">{data.description}</p>
      <p class="text-accent italic text-base mt-8">
        **Must carry 50K in aircraft damage insurance
      </p>
      <div class="bg-primary/70 mt-8 rounded-bl-lg rounded-tr-lg py-6 px-8">
        <h3 class="text-4xl text-primary-dark font-light tracking-wide">
          Documentation:
        </h3>
        <ul class="mt-6">
          {
            data.documentation.map((doc) => (
              <li class="text-white">
                <a
                  href={doc.docUrl}
                  class="flex font-sans1 w-fit text-xl mt-4 gap-x-2 items-center group hover:text-primary-dark duration-200 ease-out"
                >
                  <FaDownload />
                  {doc.docTitle}
                </a>
              </li>
            ))
          }
        </ul>
      </div>
      <div class="mt-8 w-full flex justify-center gap-x-8">
        <a href={data.rentUrl} class="btn-primary block btn-animate">
          <span class="relative z-10">Rent with Us</span>
        </a>
        <a href="/enrollment" class="btn-primary-dark block btn-animate">
          <span class="relative z-10">Train in the {data.title}</span>
        </a>
      </div>
    </div>
    <div class="col-span-2 px-4 lg:px-12 h-full">
      <div class="bg-primary/70 mt-8 p-4 h-full"></div>
    </div>
  </div>
</section>
