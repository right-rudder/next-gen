---
import {
  FACEBOOK_URL,
  INSTAGRAM_URL,
  LINKEDIN_URL,
  PHONE_NUMBER,
  EMAIL_ADDRESS,
  ADDRESS_LINE_1,
  ADDRESS_LINE_2,
} from "../consts";
import { FaPhoneSquareAlt } from "react-icons/fa";
---

<div class="w-full bg-gray-900 z-50 h-10" id="top">
  <div
    class="mx-auto flex max-w-[80rem] items-center align-middle h-full justify-between px-4"
  >
    <div class="flex items-center justify-center align-middle space-x-4">
      <a
        href={LINKEDIN_URL}
        target="_blank"
        name="LinkedIn"
        aria-label="Visit us at LinkedIn"
        class="transition-colors duration-300 text-white hover:text-accent hover:brightness-125 hover:scale-105"
      >
        <svg viewBox="0 0 16 16" fill="currentColor" class="h-5">
          <path
            d="M0 1.146C0 .513.526 0 1.175 0h13.65C15.474 0 16 .513 16 1.146v13.708c0 .633-.526 1.146-1.175 1.146H1.175C.526 16 0 15.487 0 14.854zm4.943 12.248V6.169H2.542v7.225zm-1.2-8.212c.837 0 1.358-.554 1.358-1.248-.015-.709-.52-1.248-1.342-1.248S2.4 3.226 2.4 3.934c0 .694.521 1.248 1.327 1.248zm4.908 8.212V9.359c0-.216.016-.432.08-.586.173-.431.568-.878 1.232-.878.869 0 1.216.662 1.216 1.634v3.865h2.401V9.25c0-2.22-1.184-3.252-2.764-3.252-1.274 0-1.845.7-2.165 1.193v.025h-.016l.016-.025V6.169h-2.4c.03.678 0 7.225 0 7.225z"
          ></path>
        </svg>
      </a>
      <a
        href={INSTAGRAM_URL}
        target="_blank"
        name="Instagram"
        aria-label="Visit us at Instagram"
        class="transition-colors duration-300 text-white hover:text-accent hover:brightness-125 hover:scale-105"
      >
        <svg viewBox="0 0 30 30" fill="currentColor" class="h-6">
          <circle cx="15" cy="15" r="4"></circle>
          <path
            d="M19.999,3h-10C6.14,3,3,6.141,3,10.001v10C3,23.86,6.141,27,10.001,27h10C23.86,27,27,23.859,27,19.999v-10   C27,6.14,23.859,3,19.999,3z M15,21c-3.309,0-6-2.691-6-6s2.691-6,6-6s6,2.691,6,6S18.309,21,15,21z M22,9c-0.552,0-1-0.448-1-1   c0-0.552,0.448-1,1-1s1,0.448,1,1C23,8.552,22.552,9,22,9z"
          ></path>
        </svg>
      </a>
      <a
        href={FACEBOOK_URL}
        target="_blank"
        name="Facebook"
        aria-label="Visit us at Facebook"
        class="transition-colors duration-300 text-white hover:text-accent hover:brightness-125 hover:scale-105"
      >
        <svg viewBox="0 0 24 24" fill="currentColor" class="h-5">
          <path
            d="M22,0H2C0.895,0,0,0.895,0,2v20c0,1.105,0.895,2,2,2h11v-9h-3v-4h3V8.413c0-3.1,1.893-4.788,4.659-4.788 c1.325,0,2.463,0.099,2.795,0.143v3.24l-1.918,0.001c-1.504,0-1.795,0.715-1.795,1.763V11h4.44l-1,4h-3.44v9H22c1.105,0,2-0.895,2-2 V2C24,0.895,23.105,0,22,0z"
          ></path>
        </svg>
      </a>
    </div>

    <a
      href=`tel:${PHONE_NUMBER}`
      name="Call Us"
      aria-label="Call us"
      class="lg:mr-9 text-white text-base lg:text-lg font-sans1 font-normal flex items-center align-middle hover:scale-105 hover:text-accent hover:brightness-125 cursor-pointer transition-all"
      aria-label="Call telephone Link"
    >
      <FaPhoneSquareAlt className="mr-2 text-lg lg:text-xl" />
      {PHONE_NUMBER}</a
    >
  </div>
</div>
