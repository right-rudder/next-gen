---
const { course } = Astro.props;
---

<div>
  <div
    class="bg-white p-16 text-dark-blue flex flex-col gap-3 h-full justify-between"
  >
    <div class="flex flex-col gap-3">
      <h1 class="font-bold text-3xl">{course.name}</h1>
      <h2 class="font-semibold">Duration: {course.duration}</h2>
      <p class="paragraph">{course.description}</p>
    </div>
    <div class="flex self-end">
      <a
        href={course.link}
        class="font-bold text-red-700 hover:text-dark-blue duration-200"
        >Read More</a
      >
    </div>
  </div>
</div>
