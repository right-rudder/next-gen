---
import WhyBecomePilot from "./WhyBecomePilot";

const { content } = Astro.props;
---

<section id="brokerageServices" class="py-24 px-5 bg-primary/10 scroll-my-20">
  <div
    class="max-w-xl gap-10 lg:max-w-7xl mx-auto flex flex-col lg:flex-row items-center lg:gap-20"
  >
    <div class="flex flex-col lg:flex-1 text-center lg:text-left">
      {
        content.upperHeading && (
          <h2 class="uppercase text-primary font-bold tracking-widest">
            {content.upperHeading}
          </h2>
        )
      }
      {
        content.heading && (
          <h3 class="text-5xl text-primary-dark font-bold leading-tight">
            {content.heading}
          </h3>
        )
      }
      <p class="text-gray-500 font-sans1 leading-relaxed my-5 px-4 lg:py-0">
        {content.description}
      </p>
      <a
        href={content.buttonLink}
        class="mx-auto lg:mx-0 btn-primary btn-animate"
        ><span class="relative z-10">{content.buttonText}</span></a
      >
    </div>

    <div class="flex-1 w-full overflow-hidden">
      <WhyBecomePilot client:visible reasons={content.reasons} />
    </div>
  </div>
</section>
