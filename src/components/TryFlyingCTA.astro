---
import { Image } from "astro:assets";
import img from "../assets/nextgen-flight-academy-discovery-flight.jpg";

const { content } = Astro.props;
---

<div class="bg-white h-screen">
  <div class="flex items-center justify-center flex-wrap h-full">
    <div class="lg:h-full w-full lg:w-1/2">
      <Image
        src={img}
        alt={"Pilot in cockpit"}
        class="object-cover object-center w-full h-full"
      />
    </div>
    <div class="w-full lg:w-1/2">
      <div class="px-8">
        <p
          class="px-4 text-6xl lg:text-8xl font-sans2 font-bold tracking-tight text-primary text-center lg:text-left"
        >
          {content.heading}
        </p>
        <p
          class="px-4 mt-6 font-sans1 text-lg leading-6 text-gray-900 text-center lg:text-left"
        >
          {content.text}
        </p>
        <a
          href={content.buttonLink}
          target="_blank"
          class="btn-primary block mt-6 mx-auto lg:mx-0 lg:ml-4"
        >
          {content.buttonText}</a
        >
      </div>
    </div>
  </div>
</div>
