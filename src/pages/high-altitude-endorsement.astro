  {
    "@context": "https://schema.org",
    "@type": "Course",
    "name": "High Altitude Endorsement Training",
    "description": "Comprehensive high altitude endorsement and mountain flying training for pilots. Learn density altitude operations, mountain weather, and emergency procedures for safe flying in California's diverse terrain.",
    "provider": {
      "@type": "Organization",
      "name": "NextGen Flight Academy",
      "url": "https://flyhere.aero/",
      "address": {
        "@type": "PostalAddress",
        "streetAddress": "6951 Flight Road Suite 106",
        "addressLocality": "Riverside",
        "addressRegion": "CA",
        "postalCode": "92504",
        "addressCountry": "US"
      }
    },
    "courseCode": "HAE-101",
    "coursePrerequisites": "Private Pilot License (PPL) or higher",
    "educationalCredentialAwarded": "FAA High Altitude Endorsement",
    "keywords": [
      "high altitude endorsement",
      "mountain flying training",
      "density altitude training",
      "California mountain flying",
      "high altitude pilot training"
    ],
    "courseMode": ["onsite", "practical"],
    "location": [
      {
        "@type": "Place",
        "name": "Big Bear City Airport",
        "address": "Big Bear City, CA"
      },
      {
        "@type": "Place",
        "name": "Riverside Municipal Airport",
        "address": "Riverside, CA"
      },
      {
        "@type": "Place",
        "name": "Redlands Municipal Airport",
        "address": "Redlands, CA"
      }
    ],
    "offers": {
      "@type": "Offer",
      "description": "Contact for pricing based on experience level",
      "priceCurrency": "USD",
      "availability": "InStock"
    }
  }
</script>
