---
import BaseLayout from "../layouts/BaseLayout.astro";
import HeaderScreen from "../components/HeaderScreen.astro";

const homePage = {
  pageTitle: "500 Server Error | NextGen Flight Academy",
  pageDescription:
    "The page you are looking for does not exist.  Please check the URL and try again.",
  pageKeywords: "500, server error, nextgen flight academy",
  header: {
    imagePath:
      "/src/assets/nextgen-flight-academy-riverside-redlands-california-home.webp",
    imageAlt: "Plane flying overhead XYZ location at ABC Flight School",
    headerH1: `500`,
    headerH2: "Server Error",
  },
};
---

<BaseLayout
  siteTitle={homePage.pageTitle}
  siteDescription={homePage.pageDescription}
  keywords={homePage.pageKeywords}
>
  <!-- HEADER -->
  <HeaderScreen content={homePage.header} />
</BaseLayout>
