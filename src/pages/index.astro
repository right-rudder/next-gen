---
import BaseLayout from "../layouts/BaseLayout.astro";
import homePage from "../data/homePage";
import TryFlyingCTA from "../components/TryFlyingCTA.astro";
import GoogleMaps from "../components/GoogleMaps.astro";
import GridNav from "../components/GridNav.astro";
import ProgramsSwiper from "../components/ProgramsSwiper.astro";
import HeaderScreen from "../components/HeaderScreen.astro";
import Testimonials from "../components/Testimonials.astro";
import QuizCTA from "../components/QuizCTA.astro";
import BlogFeed from "../components/BlogFeed.astro";
import BookDownload from "../components/BookDownload.astro";
import ImageComp from "../components/ImageComp.astro";
import FAQSection from "../components/FAQSection.astro";
import { flightTrainingFAQs } from "../data/faqs.js";

const { data } = homePage;
---

<BaseLayout
  siteTitle={data.pageTitle}
  siteDescription={data.pageDescription}
  keywords={data.pageKeywords}
>
  <!-- HEADER -->
  <HeaderScreen content={data.header} />

  <section id="awards" class="bg-slate-950 py-10">
    <h3
      class="text-gray-100 text-center mt-2 font-normal font-sans1 text-base tracking-wide uppercase group"
    >
      Voted as an <strong
        class="text-primary group-hover:text-accent duration-700 ease-in-out"
        >AOPA Distinguished Flight School</strong
      > 3 years in a row!
    </h3>
    <div class="flex flex-wrap justify-center items-center gap-4 mt-4">
      <a
        href="/blog/three-years-a-charm-aopa-honors-nextgen-flight-academy-for-third-time-running/"
        target="_self"
        class="flex flex-col items-center group"
      >
        <ImageComp
          imagePath="/src/assets/2023_FTExperience_DistinguishedBadge_Flight-School_FINAL.png"
          imageAlt="Flight Training Experience Award Distinguished Flight School 2024 Badge"
          styles="w-40 h-auto group-hover:scale-110 group-hover:brightness-110 duration-300 ease-out"
        />
      </a>
      <a
        href="/blog/three-years-a-charm-aopa-honors-nextgen-flight-academy-for-third-time-running/"
        target="_self"
        class="flex flex-col items-center group"
      >
        <ImageComp
          imagePath="/src/assets/2024_FTExperience_DistinguishedBadge_Flight-School_FINAL.png"
          imageAlt="Flight Training Experience Award Distinguished Flight School 2024 Badge"
          styles="w-36 h-auto group-hover:scale-110 group-hover:brightness-110 duration-300 ease-out"
        />
      </a>
      <a
        href="/blog/three-years-a-charm-aopa-honors-nextgen-flight-academy-for-third-time-running/"
        target="_self"
        class="flex flex-col items-center group"
      >
        <ImageComp
          imagePath="/src/assets/2025_FTExperience_DistinguishedBadge_Flight-School.png"
          imageAlt="Flight Training Experience Award Distinguished Flight School 2025 Badge"
          styles="w-36 h-auto group-hover:scale-110 group-hover:brightness-110 duration-300 ease-out"
        />
      </a>
    </div>
  </section>

  <GridNav content={data.gridNav} />

  <TryFlyingCTA content={data.discoveryCTA} />

  <BookDownload />

  <ProgramsSwiper content={data.programs} />

  <Testimonials content={data.testimonials} />

  <QuizCTA content={data.quizCTA} />

  <FAQSection
    faqs={flightTrainingFAQs.slice(0, 8)}
    heading="Frequently Asked Questions"
    subheading="Get answers to common questions about flight training at NextGen Flight Academy"
  />

  <BlogFeed data={data.blogFeed} />

  <section class="w-full flex flex-wrap overflow-hidden">
    <GoogleMaps data={data.gMaps[0]} />
    <GoogleMaps data={data.gMaps[1]} />
  </section>
</BaseLayout>
<script src="../scripts/creativeSlider.js"></script>
