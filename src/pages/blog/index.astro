---
import { SITE_TITLE, SITE_DESCRIPTION } from "../../consts";
import { getCollection } from "astro:content";
import FormattedDate from "../../components/FormattedDate.astro";
import BaseLayout from "../../layouts/BaseLayout.astro";
import { Icon } from "astro-icon/components";
import Header from "../../components/Header.astro";

const data = {
  imagePath:
    "/src/assets/part-of-the-piper-fleet-at-nextgen-flight-academy-redlands-riverside-ca-pilot-training-school-redlands.jpg",
  imageAlt: "Piper Warrior and Cessna at Learn to Fly, LLC in Redlands, CA",
  headerH1: "Blog",
  headerH2:
    "Explore the latest happenings with NextGen Flight Academy",
};

const posts = (await getCollection("blog")).sort(
  (a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf()
);
---

<BaseLayout
  pageTitle="Blog | NextGen Flight Academy"
  pageDescription="Explore the latest happenings in the world of flight training at NextGen Flight Academy. Gain valuable insights and tips to ease pre-flight jitters and prepare effectively for your important milestones."
  pageKeywords="blog, private pilot's license, written exam, pilot resources, flight training, kansas city flight school, exam preparation, pilot licensing, aviation blog, pilot tips"
>
  <!-- Header -->
  <Header data={data} />

  <section class="max-w-6xl mx-auto lg:my-24 p-5 bg-primary/20">
    <ul class="grid gap-5 grid-cols-1 md:grid-cols-2 lg:grid-cols-2">
      {
        posts.map((post, index) => (
          <li class="h-72 border border-primary-dark overflow-hidden group col-span-1 md:first:col-span-2 md:first:h-96">
            <a
              href={`/blog/${post.slug}/`}
              class={`flex flex-col lg:flex-row gap-5 h-full ${index === 0 ? "" : ""}`}
            >
              <div class="flex-[1.7_1.7_0] h-full flex flex-col justify-between p-4 lg:px-8 lg:py-10">
                <div>
                  <h4
                    class={`font-semibold leading-5 text-primary-dark ${index === 0 ? "text-xl lg:text-4xl" : "text-2xl"}`}
                  >
                    {post.data.title}
                  </h4>
                  <div class="flex items-center gap-1">
                    <p class="font-medium text-lg text-gray-900/90">
                      {post.data.author}
                    </p>
                  </div>
                </div>
                <p
                  class={`mt-12 font-sans1 ${index === 0 ? "hidden lg:block" : "hidden"}`}
                >
                  {post.data.description}
                </p>
                <p class="text-primary-dark/70 text-lg font-medium">
                  {post.data.readingTime} minutes read Â·{" "}
                  <FormattedDate date={post.data.pubDate} />
                </p>
              </div>
              <div class="flex-1 h-full overflow-hidden">
                <img
                  src={post.data.heroImage}
                  alt=""
                  class="h-full object-cover w-full"
                />
              </div>
            </a>
          </li>
        ))
      }
    </ul>
  </section>
</BaseLayout>
